<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background_color">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            //Breakfast
            <ImageView
                android:layout_width="500dp"
                android:layout_height="200dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/morning">

            </ImageView>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:text="Breakfast"
                android:textColor="?attr/text_color"
                android:textSize="20dp"
                android:textStyle="bold">

            </TextView>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:text="One cup of black tea without sugar and milk\n\n Boiled chickpea with desiccated coconut"
                android:textColor="?attr/text_color"
                android:textSize="15dp"
                android:textStyle="normal">

            </TextView>

            //Snack
            <ImageView
                android:layout_width="500dp"
                android:layout_height="200dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="220dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/morning">

            </ImageView>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="240dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:text="Snack"
                android:textColor="?attr/text_color"
                android:textSize="20dp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/instruction"
                android:layout_width="196dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="280dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:text="Some grapes with few pieces of dark chocolates"
                android:textColor="?attr/text_color"
                android:textSize="15dp"
                android:textStyle="normal">

            </TextView>

            //Lunch
            <ImageView
                android:layout_width="500dp"
                android:layout_height="200dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="440dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/morning">

            </ImageView>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="460dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:text="Lunch"
                android:textColor="?attr/text_color"
                android:textSize="20dp"
                android:textStyle="bold">

            </TextView>

            <TextView

                android:layout_width="203dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="500dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:text="Cup of red rice with piece of chicken, pumpkin and mukunuanna salad with desiccated coconut\n \n Fruit salad"
                android:textColor="?attr/text_color"
                android:textSize="15dp"
                android:textStyle="normal">

            </TextView>

            //Dinner
            <ImageView
                android:layout_width="500dp"
                android:layout_height="200dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="660dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/morning">

            </ImageView>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="680dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:text="Dinner"
                android:textColor="?attr/text_color"
                android:textSize="20dp"
                android:textStyle="bold">

            </TextView>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="720dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:text="Five string hoppers with potato curry and a boiled egg\n"
                android:textColor="?attr/text_color"
                android:textSize="15dp"
                android:textStyle="normal">

            </TextView>
        </RelativeLayout>

    </ScrollView>
</RelativeLayout><?xml version="1.0" encoding="utf-8"?>
